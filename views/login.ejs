    <body>
        <h1>Login</h1>
        <ul>
            <% if(messages.success_msg){ %>
                <li>
                    <%=messages.success_msg %></li>
                    <% } %>
                </li>
        </ul>
        <ul>
            <% if(messages.error){ %>
                <li><%= messages.error %></li>
                <% } %> 
        </ul>
        <form action="/users/login" method="POST">
            <div>
                <input type="email" id="mailUtilisateur" name="mailUtilisateur" placeholder="Email" required>
            </div>
            <div>
                <input type="password" id="mdpUtilisateur" name="mdpUtilisateur" placeholder="Mot de passe" required>
            </div>
            <div>
                <input type ="submit" value="Login" />
            </div>
            <a href="/users/register">Vous n'avez pas de compte? Cr√©ez-en un ici!</a>
        </form>
    </body>
